// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  credential Credentials[]
  note Notes[]
  credCard CredCards[]
  token Tokens[]

  @@map("user")
}

model Credentials {
  id Int @id @default(autoincrement())
  userName String
  password String
  credentialTitle String
  userId Int
  user Users @relation(fields: [userId], references: [id])
  
  @@unique([userId, credentialTitle])
  @@map("credential")
}

model Notes {
  id Int @id @default(autoincrement())
  noteTitle String
  note String
  userId Int
  user Users @relation(fields: [userId], references: [id])

  @@unique([userId, noteTitle])
  @@map("note")
}

model CredCards {
  id Int @id @default(autoincrement())
  cardTitle String
  cardNumber String
  cardName String
  secutityCode Int
  expirationDate String
  password Int
  virtual Boolean
  isCredit Boolean
  isDebit Boolean
  userId Int
  user Users @relation(fields: [userId], references: [id])

  @@unique([userId, cardTitle])
  @@map("credcard")
}

model Tokens {
  id Int @id @default(autoincrement())
  token Int @unique
  userId Int
  user Users @relation(fields: [userId], references: [id])

  @@map("token")
}